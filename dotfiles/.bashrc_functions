

# ----------- custom funcitons --------------------------

mkcd ()
{
    mkdir -p -- "$1" &&
       cd -P -- "$1"
}

mkmv ()
{
    mkdir -p -- "$2" &&
    mv "$1 $2/"
}


lfcd () { 
    TMPFILE=$(mktemp /tmp/lfcd-XXXXXX)
    \lf -print-last-dir $@ > $TMPFILE 
    cd $(cat $TMPFILE) 
    rm $TMPFILE
}


# ---------------------------------- fuzzy functions --------------------------------------

lff() {
    local selection

    selection=$(
      find ~/Documents ~/.config/ ~/.mydotfiles -type d | fzf --prompt 'Main> ' \
            --header 'C-h: home' \
            --bind 'ctrl-h:reload(find ~/ -type d)' \
            --height=20 --layout=reverse --info=inline --border --margin=1 --padding=1 \
    )

    if [ -n "$selection" ]; then
        cd "$selection"
        lf
    fi
}


cdf() {
    local selection
    local main_locations=("$HOME/Documents" "$HOME/.config/" "$HOME/.mydotfiles")

    selection=$(
      find ~/Documents ~/.config/ ~/.mydotfiles -type d | fzf --prompt 'Main> ' \
            --header 'C-h: home' \
            --bind 'ctrl-h:reload(find ~/ -type d)' \
            --height=20 --layout=reverse --info=inline --border --margin=1 --padding=1 \
    )

    if [ -n "$selection" ]; then
        cd "$selection"
    fi
}



f() {
    local selection
    local main_locations=("$HOME/Documents" "$HOME/.config/" "$HOME/.mydotfiles")

    selection=$(
      find ~/Documents ~/.config/ ~/.mydotfiles -type d | fzf --prompt 'Main> ' \
            --header 'C-h: home' \
            --bind 'ctrl-h:reload(find ~/ -type d)' \
            --height=40% --layout=reverse --info=inline --border --margin=1 --padding=1 \
    )

    if [ -n "$selection" ]; then
      $1 $selection
    fi
}



