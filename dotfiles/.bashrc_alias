
# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi


# ----------- Basics-----------------------------------
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias copy="xclip -i -r -selection clipboard"


# ----------- Package Management -----------------------------------
alias apt-upgrade='echo && echo -e "\x1b[30;42m Updating apt \x1b[m" && sudo apt update && sudo apt upgrade -y && echo'
alias flatpak-upgrade='echo && echo -e "\x1b[30;42m Updating flatpak \x1b[m" && flatpak update -y && echo'
alias nix-upgrade='echo && echo -e "\x1b[30;42m Updating nix \x1b[m" && ~/Apps/nix/my-home-manager.sh'
alias upgrade-all='apt-upgrade && flatpak-upgrade && nix-upgrade'

alias nix-packages='nvim ~/Apps/nix/packages.sh'
alias nix-clean='nix profile wipe-history && nix store gc'

# ---------------------- File exploring --------------------------------
alias lf='lfcd'
alias vim='nvim'
alias bat='batcat --theme="Catppuccin Mocha"'

# ---------------------- misc --------------------------------
alias nix-search='bash -c "xdg-open https://search.nixos.org" 2> /dev/null'
alias tkill='tmux kill-server'
alias sleep='systemctl suspend'

alias ipad="ip -brief -f inet address | fzf +m --reverse --height 10 | awk '{gsub(\"/.*\",\"\",\$3);print\$3}' | tee /dev/tty | xclip -r -in -selection clipboard"

# Add an "alert" alias for long running commands.  Use like so:
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# ----------------------------- kali alias's --------------------------
alias ffuf="ffuf -c -ic"


